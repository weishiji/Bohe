
/**index.wxss**/
.header{
  width : 100%;
  background-color: #2F7979;
  color : #FFF;
  text-align: center;
  padding: 4px;
  position: fixed;
  z-index: 9;
}
.header-title {
  font-size: smaller;
  margin : 4px 0;
  display: block;
  color: #fff;
}

.list-box{
  height: calc(100vh-32px);
  margin-top :32px;
  width: 100%;
  background-color: #FFF;
}
.button-box{
  margin : 0px 0 56px 0;
  width: 100%;
}
.button{
  background-color: #585859;
  color:#FFF;
  font-size: 13px;
  padding: 8px 0;
  margin: 16px;
  
}
.doctor-item{
  display: flex;
  justify-content: flex-start;
  padding: 8px;
  border-bottom: 1px solid #F3F3F3;
}

.media-body{
  flex : 1;
  margin-left: 8px;
}
.work-time{
  font-size: 13px;
  color:#9C9C9C;
  margin-left: 16px;
}
.sub-title{
  margin: 8px 0;
  font-size: 13px;

}
.case-text{
  font-size: 12px;
  font-weight: 400;
  line-height: 2;
  
}
.case-text .num{
  color : #F27F75;
  padding: 0 4px;
}
.more{
  text-align: right;
  font-size: 13px;
  color: #959595;
}
.more-icon{
  width: 20px;
  height: 20px;
  position: relative;
  top:5px;
}
.tabs{
  position: fixed;
  left:0;
  width:100%;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFF;
  border-top:1px solid #AEAEAE;
}
.tab{
  border:none;
  flex: 1;
  text-align: center;
  padding: 16px;
  border-radius: 0;
  -webkit-tap-highlight-color:transparent;
  position: relative;
  top:-1px;
  font-size: 14px;
}
.active{
  border-top:1px solid #2F7979;
  color:#2F7979;
}
.line{
  position: absolute;
  right: 0;
  color:#AEAEAE;
}