
/**index.wxss**/
.header{
  width : 100%;
  background-color: #2F7979;
  color : #FFF;
  text-align: center;
  padding: 0 0 12px 0;
  position: fixed;
  z-index: 9;
}
.header-title {
  font-size: smaller;
  margin : 0 0 0 4px;
  display: block;
  color: #fff;
}
.banner-box{
  padding-top: 36px;
}
.title-box{
  background-color: #f5f5f9;
  padding: 16px;
  text-align: center;
  color: #d7d7d7;
  font-size:13px;
}
.button-box{
  margin : 0px 0 56px 0;
  width: 100%;
}
.button{
  background-color: #585859;
  color:#FFF;
  font-size: 13px;
  padding: 8px 0;
  margin: 16px;
  
}
.flex{
  flex: 1;
  padding: 8px;
}
.black{
  color: #333;
}
.question{
  margin-bottom: 36px;
}
.tabs{
  position: fixed;
  left:0;
  width:100%;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFF;
  border-top:1px solid #AEAEAE;
}
.tab{
  border:none;
  flex: 1;
  text-align: center;
  padding: 8px;
  border-radius: 0;
  -webkit-tap-highlight-color:transparent;
  position: relative;
  top:-1px;
  font-size: 14px;
  line-height: 2.55555556;
}
.active{
  border-top:1px solid #2F7979;
  color:#2F7979;
}
.line{
  position: absolute;
  right: 0;
  color:#AEAEAE;
}
.contact-button{
  border:none !important;
  padding: 0;
  font-size: 14px; 
}