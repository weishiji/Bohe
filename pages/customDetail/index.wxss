.avatar.big{
  width: 80px;
  height: 80px;
}
.detail-header{
  padding : 8px 0;
  display: flex;
  flex-direction:column;
  width: 100%;
  text-align: center;
  align-items:center;
  min-height: 150px;
}
.detail-header .doctor-name{
  color: #333333;
  padding: 8px 0;
}
.detail-header .avatar,.detail-header .doctor-name{
  flex: 1;
}
.doctor-title{
  color : #868686;
  font-size: 13px;
}
.doctor-sub{
  text-align: center;
  font-size: 12px;
  color: #5A5A5A;
  font-weight: normal;
  padding:4px;
}
.doctor-sub .num{
  color : #F27F75;
  padding: 0 2px;
}
.auth,.case-diff{
  display: flex;
  align-items: center;
  align-content:center;
  justify-content:center;
  width:100%;
  padding: 16px;
}
.auth-image{
  width: 75px;
  height: 75px;
}
.auth-item{
  flex: 1;
  font-size: 12px;
  font-weight: 400;
  color : #255B5A;
  padding: 0 8px;
}
.detail-info,.case{
  padding : 8px;
}
.title-line{
  border-left: 4px solid #517A79;
  font-size:13px;
  text-align: left;
  padding-left: 8px;
}
.skill{
  font-size: 13px;
  color : #CBCBCB;
  background-color: #F4F4F4;
  padding : 4px 8px;
  margin:8px 0;
  border-radius: 1px;
}
.introduce{
  font-size: 12px;
  font-weight: 400;
  line-height: 2;
  text-indent: 2em;
  color:#878787;
  margin:16px 0;
}
.case-box{
  display: flex;
}
.button-box{
  padding : 16px 8px;
}
.hope{
  text-align: center;
  color: #999;
  padding: 24px;
}
.button{
  background-color: #4F7878;
  color:#FFF;
  font-size: 13px;
  padding:8px 0;
}
.case-content{
  flex: 1;
  padding: 12px 0;
}
.name{
  font-size:12px;
  position: relative;
  border-bottom: 1px solid #eee;
  line-height: 2;
  margin-bottom: 8px;
  padding-bottom: 8px;
}
.history-num{
  position: absolute;
  right: 0;
  color:#999;
}
.case-des{
  font-size: 12px;
  color:#888;
  text-indent: 2em;
}
.case-diff{
  margin-bottom: 16px;
  border-bottom: 1px solid #eee;
  
}
.diff-img{
  flex: 1;
  font-size: 12px;
  font-weight: 400;
  color : #999;
  text-align: center;
  padding: 0 8px;
}
.diff-img .img{
  width: 100%;
}
.case-point{
  font-size: 13px;
  color: #878787;
  margin-bottom: 8px;
  line-height: 2;
}