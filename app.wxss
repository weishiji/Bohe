/**app.wxss**/

page {
  background: #f5f5f9;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.box {
  background: #fff;
  border-bottom: 1px solid #e4e4e4;
  border-top: 1px solid #e4e4e4;
  padding: 8px 0;
  margin-bottom: 8px;
}

.box .title-line {
  border-left: 4px solid #517a79;
  font-size: 13px;
  text-align: left;
  padding-left: 8px;
  margin-left: 8px;
}

.box .title {
  font-size: 14px;
  color: #999;
  padding: 16px;
}

.box .sub-title {
  font-size: 13px;
  color: #999;
  margin: 12px 0 6px 0;
  padding:8px 16px;
}
