  box-shadow: 0 2px 4px 0 rgba(0,0,0,.05);
  border-bottom: 1px solid #E4E4E4;
  padding : 8px 0;
  margin-bottom: 8px;
}
.avatar{
  width : 70px;
  height: 70px;
  border-radius: 50%; 
}